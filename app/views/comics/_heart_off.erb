<%= form_with(url: comics_add_to_favorites_path(comic_id: comic.id), remote: true, method: "post") do %>
  <%= image_submit_tag("heart_off.png", class: "heart-off", id: "heart_#{comic.id}",
                        :onmouseover => "this.src='assets/heart_hover.png'", 
                        :onmouseout => "this.src='assets/heart_off.png'") %>
<% end %>
