<div class="container text-center">
  <% if Current.user %>
    Logged in as: <%= Current.user.email %>
    <br>
    <%= link_to 'Edit Password', edit_password_path %>
    <%= button_to 'Logout', logout_path, method: :delete %>
  <% else %>
    <%= link_to 'Sign Up', sign_up_path %>
    or
    <%= link_to 'Login', sign_in_path %>
  <% end %>
  <h1>Comics</h1>
  <small><a href="http://marvel.com">Data provided by Marvel. Â© 2022 MARVEL</a></small>
  <hr>

  <%=render partial: 'comics/search_form'%>
  <br>
  <div class="row">
    <%@records.each do |comic|%>
      <div class="card col-lg-4 col-md-6 col-sm-12">
        <div class="album">
          <div class="imgContainer">
            <img src="<%=comic.thumbnail_path%>.<%=comic.thumbnail_extension%>" alt="<%=comic.title%>" class="img-fluid comic-thumb"/>
            <%=link_to image_tag('heart_off.png', class: "heart"), root_path%>
          </div>
        </div>
        <div>
          <p class="text-center h4"><%=comic.title%></p>
        </div>
      </div>
    <%end%>
  </div>
  <%== pagy_bootstrap_nav(@pagy) %>
</div>