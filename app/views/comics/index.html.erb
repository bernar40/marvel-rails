<%=render partial: 'comics/search_form'%>
<br>
<div class="columns is-multiline">
<%@records.each do |comic|%>
  <div class="column is-one-third">
    <div class="card">
      <div class="card-content">
        <div class="media">
          <div class="media-left">
            <figure>
              <img src="<%=comic.thumbnail_path%>.<%=comic.thumbnail_extension%>" alt="<%=comic.title%>" width="100"/>
            </figure>
          </div>
          <div class="media-content">
            <p class="title is-5"><%=comic.title%></p>
          </div>
        </div>
      </div>
    </div>
  </div>
<%end%>
</div>
<%== pagy_bootstrap_nav(@pagy) %>